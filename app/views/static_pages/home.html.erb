
<div class="jumbotron home">
</div>
<h2>
  Our Featured Products
</h2>

<div class="container">
  <% @products.each_slice(3) do |products| %>
        <div class="row">
          <% products.each do |product| %>
              <div class="col-sm-4">
                <div class="panel panel-primary">
                  <div class="panel-heading"><%= product.name %></div>
                    <div class="panel-body clearfix">
                      <% if product.picture? %>
                        <%= image_tag product.picture.url  , :class => "img-responsive" %>
                      <% else %>
                        <%=image_tag('default_product.png', alt: 'Cart', class: "img-responsive")%>
                      <% end %>
                    </div>
                    <div class="panel-footer">
                      <%= form_for @order_item, remote: true do |f| %>
                      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>
                        <div class="input-group">
                          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
                          <div class="input-group-btn">
                            <%= f.hidden_field :product_id, value: product.id %>
                            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                </div>
              </div>
          <% end %>    
        </div>
        <hr/>
  <% end %>
</div>